<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="io.edanni.money.ui.fragment.StatementFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fr.ganfra.materialspinner.MaterialSpinner
            android:layout_height="56dp"
            android:layout_width="match_parent"
            app:ms_hint="@string/account"
            app:ms_enableFloatingLabel="false"
            android:id="@+id/account" />
        <fr.ganfra.materialspinner.MaterialSpinner
            android:layout_width="match_parent"
            app:ms_hint="@string/category"
            app:ms_enableFloatingLabel="false"
            android:id="@+id/category"
            android:layout_height="56dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:gravity="center_vertical">

            <TextView
                android:text="R$"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currency"
                android:layout_weight="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:paddingLeft="8dip" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textAlignment="textEnd" />
            <ImageButton android:layout_height="wrap_content" android:layout_weight="0" android:layout_width="wrap_content"
                app:srcCompat="@drawable/ic_backspace_black_24dp"
                android:id="@+id/backspace"
                style="@style/Widget.AppCompat.Button.Colored"
                android:minWidth="48dip" />

        </LinearLayout>

        <LinearLayout android:layout_weight="1"
            android:layout_height="0dp" android:layout_width="match_parent" android:orientation="vertical">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/b1"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/b2"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/b3"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/b4"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/b5"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/b6"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/b7"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/b8"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/b9"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            </LinearLayout>
            <Button
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b0"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored"/>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="invisible"
        android:indeterminate="true" />
</FrameLayout>

